
.header
	text-align right
	padding 20px

	&__link
		margin-left 30px

	&__logo
		background url(/images/logo.svg) no-repeat 10px
		background-size 50px auto
		size 66px
		float left
		cursor pointer

		font-size 30px
		color color_wisteria
		box-sizing border-box
		padding 16px 0 0 52px
		&:after
			content 'Fight'
			text-decoration underline

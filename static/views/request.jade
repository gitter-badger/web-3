extends layout

block content
	form(method='post' id='request-form').request-form
		each input, index in requestForm.fields
			.input--rich.request-form__input
				input.input(form='request-form' name="#{input.name}" placeholder="#{__(input.placeholder)}" autofocus= index == 0)
				if input.mark
					.input--mark(data-title=__(input.mark))
				if input.file
					.input--file
						.input--file__view= __(input.file.text)
						input.input--file__input(form='request-form' name="#{input.file.name}" type='file')
				if input.tip
					.tip
						if input.tip.title
							.tip__title= __(input.tip.title)
						if input.tip.text
							.tip__text= __(input.tip.text)

		.input--rich.request-form__input
			input(type='submit' value=__(requestForm.submit.text)).btn.btn--submit.request-form__submit
